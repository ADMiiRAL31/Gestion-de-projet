// Prisma Schema for Couple Life Project Management System
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Younes & Asmae
model User {
  id        String   @id @default(uuid())
  firstName String
  email     String   @unique
  passwordHash String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  incomes              Income[]
  recurringExpenses    RecurringExpense[]
  loans                Loan[]
  projectContributions ProjectContribution[]
  notes                Note[]
  alerts               Alert[]
  budgets              Budget[]

  @@map("users")
}

// Income model - Track all income sources
model Income {
  id          String    @id @default(uuid())
  userId      String
  type        String    // salary, bonus, freelance, investment, other
  label       String
  amount      Float
  currency    String    @default("EUR")
  startDate   DateTime
  endDate     DateTime?
  isRecurring Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("incomes")
}

// RecurringExpense model - Track all recurring expenses
model RecurringExpense {
  id            String    @id @default(uuid())
  userId        String?   // Nullable for shared expenses
  isShared      Boolean   @default(false)
  category      String    // rent, insurance, phone, subscription, loan_payment, utilities, transport, other
  label         String
  amount        Float
  currency      String    @default("EUR")
  billingPeriod String    // monthly, yearly, quarterly, weekly
  startDate     DateTime
  endDate       DateTime?
  provider      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("recurring_expenses")
}

// Loan model - Track all loans
model Loan {
  id              String    @id @default(uuid())
  userId          String?   // Nullable for shared loans
  isShared        Boolean   @default(false)
  label           String
  totalAmount     Float
  remainingAmount Float
  monthlyPayment  Float
  interestRate    Float     // Annual interest rate in percentage
  startDate       DateTime
  endDate         DateTime
  lender          String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("loans")
}

// CoupleProject model - Life projects for the couple
model CoupleProject {
  id           String   @id @default(uuid())
  title        String
  description  String?
  targetAmount Float
  currency     String   @default("EUR")
  targetDate   DateTime
  status       ProjectStatus @default(IDEA)
  priority     ProjectPriority @default(MEDIUM)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  contributions ProjectContribution[]

  @@map("couple_projects")
}

// ProjectContribution model - Track contributions to projects
model ProjectContribution {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  amount    Float
  date      DateTime @default(now())
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project CoupleProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("project_contributions")
}

// Note model - Notes et rappels de couple
model Note {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String
  category  NoteCategory
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}

// Alert model - Alertes et notifications
model Alert {
  id          String    @id @default(uuid())
  userId      String?   // Null = alerte pour tous
  type        AlertType
  title       String
  description String
  date        DateTime  @default(now())
  isRead      Boolean   @default(false)
  actionUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("alerts")
}

// Budget model - Budget limits per category
model Budget {
  id        String   @id @default(uuid())
  userId    String
  category  String   // Alimentation, Transport, Loisirs, etc.
  budgetAmount Float
  spent     Float    @default(0)
  month     Int      // 1-12
  year      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, category, month, year])
  @@map("budgets")
}

// Enums
enum ProjectStatus {
  IDEA
  PLANNING
  IN_PROGRESS
  DONE
  CANCELLED
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
}

enum NoteCategory {
  TACHE
  IDEE
  RAPPEL
  IMPORTANT
}

enum AlertType {
  URGENT
  WARNING
  INFO
  SUCCESS
}
